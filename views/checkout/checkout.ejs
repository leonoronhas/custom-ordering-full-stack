   <div class="centered">
        <div>
            <h1> Are you ready to order? </h1>
        </div>
   </div>
        <div class="project-container2">
            <div class="left-column">
                    <div class="header">
                        <h2><%= project.projectName %></h2>
                    </div>
                    <p>
                    <h3>Description</h3>
                    <div class="description-padd">
